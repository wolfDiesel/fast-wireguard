# FastAPI настройки
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Безопасность
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# WireGuard настройки
WG_INTERFACE=wg0
WG_PORT=51820
WG_NETWORK=10.0.0.0/24
WG_DNS=8.8.8.8,8.8.4.4

# Пути к файлам
WG_CONFIG_PATH=/etc/wireguard
WG_KEYS_PATH=./wireguard/keys
WG_CONFIGS_PATH=./wireguard/configs

# База данных (опционально)
DATABASE_URL=sqlite:///./wireguard.db
